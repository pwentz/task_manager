<form action="/tasks" method="post">
  <fieldset class="form-group">
    <label for="taskName">Describe your task!</label>
    <input class="form-control form-control-lg" type="text" name="task[name]" id="taskName" placeholder="Task name..."><br/>
    <textarea class="form-control form-control-lg" name="task[to_do]" id="taskDescription" placeholder="Description..."></textarea><br/>
    <input class="btn btn-success" type="submit" value="add to tasks">
  </fieldset>
</form>
